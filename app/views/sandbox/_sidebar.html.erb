<div class="col-sm-3 sidebar">
  <%= form_tag sandbox_path, method: :get do %>
    <div class="form-group">
      <%= label_tag 'organisation', 'Organisation ID:', class: '' %>
      <%= text_field_tag 'organisation', params[:organisation], placeholder: 'Enter organisation ID...', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'base_path', 'Base path:', class: '' %>
      <%= text_field_tag 'base_path', params[:base_path], placeholder: 'Enter base path...', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'from', 'From:', class: '' %>
      <%= date_field_tag 'from', params[:from],  class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag 'to', 'To:', class: '' %>
      <%= date_field_tag 'to', params[:to],  class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= label_tag do %>
        <%= check_box_tag 'total_items', params[:total_items], params[:total_items].present? %>
        Total content items
      <% end %>
      <%= label_tag do %>
        <%= check_box_tag 'pageviews', params[:pageviews], params[:pageviews].present? %>
        Pageviews
      <% end %>
      <%= label_tag do %>
        <%= check_box_tag 'unique_pageviews', params[:unique_pageviews], params[:unique_pageviews].present? %>
        Unique pageviews
      <% end %>
      <%= label_tag do %>
        <%= check_box_tag 'feedex_issues', params[:feedex_issues], params[:feedex_issues].present? %>
        Feedex issues
      <% end %>
      <%= label_tag do %>
        <%= check_box_tag 'number_of_pdfs', params[:number_of_pdfs], params[:number_of_pdfs].present? %>
        Number of PDFs
      <% end %>
      <%= label_tag do %>
        <%= check_box_tag 'number_of_word_files', params[:number_of_word_files], params[:number_of_word_files].present? %>
        Number of Word files
      <% end %>
    </div>
    <div class="form-group">
      <%= submit_tag 'Filter', name: 'filter', class: "btn btn-default btn-block" %>
    </div>
  <% end %>
</div>
