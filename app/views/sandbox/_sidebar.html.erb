<div class="col-sm-3 sidebar">
  <%= form_tag sandbox_path, method: :get do %>
      <div class="form-group">
        <%= label_tag 'organisation', 'Organisation ID:', class: '' %>
        <%= text_field_tag 'organisation', params[:organisation], placeholder: 'Enter organisation ID...', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'base_path', 'Base path:', class: '' %>
        <%= text_field_tag 'base_path', params[:base_path], placeholder: 'Enter base path...', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'document_type', 'Document Type:', class: '' %>
        <%= text_field_tag 'document_type', params[:document_type], placeholder: 'Enter document type...', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'from', 'From:', class: '' %>
        <%= date_field_tag 'from', params[:from], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag 'to', 'To:', class: '' %>
        <%= date_field_tag 'to', params[:to], class: 'form-control' %>
      </div>

      <div class="input-group">
        <h4>Performance Metrics</h4>
        <%= render 'metric_option', option_name: :metric1 %>
        <%= render 'metric_option', option_name: :metric2 %>
        <%= render 'metric_option', option_name: :metric3 %>
      </div>

      <div class="form-group">
        <%= submit_tag 'Filter', name: 'filter', class: "btn btn-default btn-block" %>
      </div>
  <% end %>
</div>
